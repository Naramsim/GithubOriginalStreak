{
  "name": "github-original-streak",
  "version": "0.14.1",
  "description": "Get back longest and current streak on Github prifiles",
  "scripts": {
    "commit": "git-cz",
    "test": "xo",
    "prebuild": "npm run test && rimraf chrome/src/ firefox/data/ build",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "package": " mkdir -p build && cd ./firefox && jpm xpi && mv *.xpi ../build && cd ../chrome && zip -r ../build/chrome.zip ./* && cd ../build && cp chrome.zip chrome.nex"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Naramsim/GithubOriginalStreak.git"
  },
  "keywords": [
    "github",
    "streak",
    "original"
  ],
  "author": "Naramsim",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/Naramsim/GithubOriginalStreak/issues"
  },
  "homepage": "https://github.com/Naramsim/GithubOriginalStreak#readme",
  "devDependencies": {
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "commitizen": "^2.8.2",
    "css-loader": "^0.27.3",
    "cz-conventional-changelog": "^1.1.6",
    "eslint": "^3.0.1",
    "jpm": "^1.0.7",
    "json-loader": "^0.5.4",
    "rimraf": "^2.5.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1",
    "xo": "^0.17.0"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "ignores": [
      "chrome/**/*",
      "firefox/**/*"
    ],
    "esnext": true,
    "space": 4,
    "rules": {
      "linebreak-style": 0,
      "max-lines": 0
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "moment": "^2.14.1",
    "github-api": "^2.3.0"
  }
}
